{
  "name": "root",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "start:app": "yarn workspace @mint-editor/app-react start",
    "start:storybook": "yarn workspace @mint-editor/storybook storybook",
    "lint": "lerna run lint",
    "test": "FORCE_COLOR=true lerna run lint && CI=true FORCE_COLOR=true lerna run test -- --coverage",
    "deploy": "lerna run deploy",
    "deploy:color": "FORCE_COLOR=true lerna run deploy",
    "version": "lerna version",
    "publish": "lerna publish from-git"
  },
  "workspaces": {
    "packages": [
      "packages/app-react",
      "packages/core",
      "packages/utils",
      "packages/components",
      "packages/storybook"
    ],
    "nohoist": [
      "packages/app-react/webpack-dev-server",
      "**/babel-loader",
      "**/babel-jest"
    ]
  },
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "typescript": "~4.9.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "babel-eslint": "10.0.3",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-react-app": "^5.1.0",
    "eslint-plugin-flowtype": "^4.5.3",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.0.6",
    "jest-prop-type-error": "^1.1.0",
    "lerna": "^3.20.2",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/setupTests.{js,jsx,ts,tsx}",
      "!src/index.{js,jsx,ts,tsx}",
      "!src/serviceWorker.{js,jsx,ts,tsx}",
      "!src/**/*.(spec|test|stories).{js,jsx,ts,tsx}"
    ]
  }
}